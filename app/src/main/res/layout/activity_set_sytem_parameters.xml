<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_sytem_parameters"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yuzelli.fluecuringmachine.view.activity.SetSytemParametersActivity">

    <include
        android:id="@+id/include_head"
        layout="@layout/include_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_head"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
             android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="50dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="设备名称："
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="设备名称："
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="运行当前阶段："
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spr_jieduan"
                android:layout_width="180dip"
                android:layout_height="35dip"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/spinner"
                android:gravity="center"
                android:paddingLeft="10dip"
                android:textSize="16sp">

            </Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="运行状态："
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spr_zhuangtai"
                android:layout_width="180dip"
                android:layout_height="35dip"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/spinner"
                android:gravity="center"
                android:paddingLeft="10dip"
                android:textSize="16sp">

            </Spinner>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="运行模式："
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spr_moshi"
                android:layout_width="180dip"
                android:layout_height="35dip"
                android:layout_marginEnd="15dp"
                android:background="@drawable/spinner"
                android:gravity="center"
                android:paddingLeft="10dip"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">

            </Spinner>
        </RelativeLayout>
    </LinearLayout>




</RelativeLayout>
